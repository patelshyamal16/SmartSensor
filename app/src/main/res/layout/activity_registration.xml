<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/homebackground"
    tools:context=".Registration">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:paddingTop="5dp"
            android:src="@drawable/loginpic" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/iv1"
            android:text="Smart Sensor"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/colorpink"
            style="@style/boldText">

        </TextView>

        <EditText
            android:id="@+id/et1"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/textinputborder"
            android:layout_below="@+id/title2"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="70dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:hint="Full Name"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:drawableLeft="@drawable/ic_person_24"
            android:drawableTint="@color/colorpink"
            android:drawablePadding="10dp"
            android:paddingLeft="5dp">

        </EditText>

        <EditText
            android:id="@+id/et2"
            android:background="@drawable/textinputborder"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/et1"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:hint="Email"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:drawableLeft="@drawable/ic_email_24"
            android:drawableTint="@color/colorpink"
            android:drawablePadding="10dp"
            android:inputType="textEmailAddress"
            android:paddingLeft="5dp">
        </EditText>

        <EditText
            android:id="@+id/et3"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:background="@drawable/textinputborder"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/et2"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:drawableLeft="@drawable/ic_lock_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorpink"
            android:inputType="textPassword"
            android:paddingLeft="5dp">

        </EditText>

        <EditText
            android:id="@+id/et4"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:background="@drawable/textinputborder"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/et3"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:hint="Confirm Password"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:drawableLeft="@drawable/ic_lock_24"
            android:drawableTint="@color/colorpink"
            android:drawablePadding="10dp"
            android:inputType="textPassword"
            android:paddingLeft="5dp">

        </EditText>

        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_pink"
            android:text="REGISTER"
            android:textColor="#ffffff" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/b1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Already an user? LogIn Here"
                android:textColor="#000000"
                android:textSize="20sp" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/pb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl"
            android:layout_marginBottom="30dp"
            android:visibility="invisible" />


    </RelativeLayout>


</ScrollView>